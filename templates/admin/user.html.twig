{% extends 'base.html.twig' %}

{% block title %}User Management{% endblock %}

{% block body %}

    <h1>Users</h1>

    <a href="{{ path('admin_index') }}"><< Back</a>

    {#{{ form_start(form) }}#}
    {#{{ form_widget(form) }}#}
    {#<button>Submit</button>#}
    {#{{ form_end(form) }}#}

    <table class="table table-striped">
        <thead>
        <tr>
            <th>id</th>
            <th>email</th>
            <th>roles</th>
        </tr>
        </thead>
        <tbody>
        {% if users %}
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles|join(', ') }}</td>
            </tr>
        {% endfor %}
        {% endif %}
        </tbody>
    </table>

{% endblock %}